<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ringText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ring Chart:"
        app:layout_constraintBottom_toBottomOf="@+id/ringChart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ringChart"
        app:layout_constraintTop_toTopOf="@+id/ringChart" />

    <xyz.thaihuynh.chart.ring.RingChart
        android:id="@+id/ringChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ringText" />

    <xyz.thaihuynh.chart.OverlayWithHoleImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</android.support.constraint.ConstraintLayout>